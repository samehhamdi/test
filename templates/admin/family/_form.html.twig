<script type="text/javascript">
    $(document).ready(function () {
        var $container = $('div#family_disciplines');

        var index = $container.find(':input').length;
        $('#add_discipline').click(function (e) {
            addDiscipline($container);

            e.preventDefault();
            return false;
        });

        function addDiscipline($container) {


            var template = $container.attr('data-prototype')
                .replace(/__name__label__/g, 'Discipline ' + (index + 1))
                .replace(/__name__/g, index)
            ;

            var $prototype = $(template);


            $container.append($prototype);

            index++;
        }


    });
</script>